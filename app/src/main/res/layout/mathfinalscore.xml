<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/first_page"
    >

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView1"
        android:layout_width="match_parent"
        android:layout_height="219dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/result" />

    <LinearLayout
        android:id="@+id/linearLayout14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:paddingRight="24dp"
            android:text="Score:           "
            android:layout_marginLeft="25dp"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/addscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=""
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:paddingRight="24dp"
            android:text="Question:     "
            android:layout_marginLeft="25dp"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/addques"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:paddingRight="24dp"
            android:text="Level:     "
            android:layout_marginLeft="25dp"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/addlevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:paddingRight="24dp"
            android:text="Date:     "
            android:layout_marginLeft="25dp"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/adddate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifImageView3"
            android:layout_width="164dp"
            android:layout_height="70dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:src="@drawable/con" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifImageView4"
            android:layout_width="164dp"
            android:layout_height="70dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:src="@drawable/con_right" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp">

        <Button
            android:id="@+id/play"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:soundEffectsEnabled="false"
            android:text="Try again"
            android:textColor="@color/text_color_button" />

        <Button
            android:id="@+id/goHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:soundEffectsEnabled="false"
            android:text="Home"
            android:textColor="@color/text_color_button" />
    </LinearLayout>





</LinearLayout>
